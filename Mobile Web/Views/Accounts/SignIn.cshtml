
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="accounts-signin-s1">
    <form name="signin" action="/Accounts/SignIn" method="post" class="accounts-signin-form container" onsubmit="return validation()">
        <center><h1>Sign in to your Z-Tech<br />Account</h1></center>
        <div class="mb-3">
            <label for="exampleInputUsername" class="form-label">Username</label>
            <input name="username" type="text" class="form-control" id="exampleInputUsername" aria-describedby="userHelp">
            <div id="errorUser" style="color:red;" class="form-text"></div>
            <div id="userHelp" class="form-text">Your username must be unique.</div>
        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input name="password" type="password" class="form-control" id="exampleInputPassword1">
            <div id="errorPassw" style="color:red;" class="form-text"></div>
        </div>
        <div style="color:red;">@Html.ValidationMessage("signin")</div>
        <p>Don't have any account yet? <a href="~/Accounts/SignUp"><u>Create your account now.</u></a></p>
        <button type="submit" class="btn btn-primary mt-3">Sign in</button>
    </form>
</section>
@section signinjs{
    <script src="~/Scripts/JS Files/Signin.js"></script>
}