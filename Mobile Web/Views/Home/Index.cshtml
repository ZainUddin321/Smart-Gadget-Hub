
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section>
    <!--image slider start-->
    <div class="slider">
        <div class="slides">
            <!--radio buttons start-->
            <input type="radio" name="radio-btn" id="radio1">
            <input type="radio" name="radio-btn" id="radio2">
            <input type="radio" name="radio-btn" id="radio3">
            <input type="radio" name="radio-btn" id="radio4">
            <!--radio buttons end-->
            <!--slide images start-->
            <div class="slide first">
                <img src="~/Images/SliderImages/Mob1.PNG" alt="">
            </div>
            <div class="slide">
                <img src="~/Images/SliderImages/Mob5.jpg" alt="">
            </div>
            <div class="slide">
                <img src="~/Images/SliderImages/Mob3.jpg" alt="">
            </div>
            <div class="slide">
                <img src="~/Images/SliderImages/Mob4.PNG" alt="">
            </div>
            <!--slide images end-->
            <!--automatic navigation start-->
            <div class="navigation-auto">
                <div class="auto-btn1"></div>
                <div class="auto-btn2"></div>
                <div class="auto-btn3"></div>
                <div class="auto-btn4"></div>
            </div>
            <!--automatic navigation end-->
        </div>
        
        <!--manual navigation start-->
        <div class="navigation-manual">
            <label for="radio1" class="manual-btn"></label>
            <label for="radio2" class="manual-btn"></label>
            <label for="radio3" class="manual-btn"></label>
            <label for="radio4" class="manual-btn"></label>
        </div>
        <!--manual navigation end-->
    </div>
    <!--image slider end-->
</section>
<hr />
<section class="section-2">
    <div class="container-fluid">
        <div class="s2 row justify-content-center">
            <div class="col-md-4 col-sm-6 justify-content-center">
                <img class="img-fluid" src="~/Images/Index Images/Phone.png" alt="">
            </div>
            <div class="rowcontent col-md-6 col-sm-6 justify-content-center">
                <h1>
                    Super Power Saving Mode 5% Power for 4.6 hours Spotify*
                </h1>
                <p>When the battery level is low, a radical power-saving mode can be turned on to extend the battery life. In this mode, you can still use six commonly used apps to meet basic needs. Only 5% power can last for up to 38.2 hours standby.*</p>
            </div>
        </div>
    </div>
</section>
<section class="section-3">
    <div class="container-fluid justify-content-center">
        <div class="s2 row justify-content-center">
            <div class="rowcontent pt-4 pl-4 col-md-6 col-sm-6 justify-content-center">
                <h1>18W Quick Charge</h1>
                <p>
                    This new innovation supports 18W quick charge,<br /> which can quickly recover your mobile phone  battery level.
                </p>
            </div>
            <div class="col-md-4 col-sm-6 pl-5 justify-content-center">
                <img class="img-fluid" src="~/Images/Index Images/Phone1.png" alt="">
            </div>
        </div>
    </div>
</section>
@section jsfile{
<script type="text/javascript" src="~/Scripts/JS Files/Index.js"></script>
}
