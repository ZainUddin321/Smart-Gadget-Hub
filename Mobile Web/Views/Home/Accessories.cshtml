<section id="sec1" class="s1-accessories">
    <center><h1>Smartphones</h1></center>
    <div class="container justify-content-center">
        <div class="row">
            @for (int i = 0; i < Model.Smartphones.Rows.Count; i++)
            {
            float discountPrice=0;
            <div class="col-lg-4">
                <div class="container d-flex justify-content-center">
                    <figure class="card card-product-grid card-lg">
                        
                        @if (!Convert.IsDBNull(Model.Smartphones.Rows[i]["Discount"]))
                        {
                            if (Convert.ToInt32(Model.Smartphones.Rows[i]["Discount"]) != null)
                            {
                                discountPrice = Model.Smartphones.Rows[i]["price"]-(Model.Smartphones.Rows[i]["price"] * Model.Smartphones.Rows[i]["Discount"]) / 100;
                                <div id="content" class="ms-auto">
                                    <div class="discount-label red"> <span>-@Model.Smartphones.Rows[i]["Discount"].ToString()%</span> </div>

                                </div>
                            }
                        }
                        else
                        {
                            discountPrice = 0;
                        }
                        <a href="#" class="img-wrap" data-abc="true">
                            <img src="@Model.Smartphones.Rows[i]["image"].ToString()">                           
                        </a>
                        <figcaption class="info-wrap">
                            <div class="row">
                                <div class="col-md-6 col-xs-9"> <a href="#" class="title" data-abc="true">@Model.Smartphones.Rows[i]["pname"].ToString()</a> <span class="rated">@Model.Smartphones.Rows[i]["ptype"].ToString()</span> </div>
                                <div class="col-md-6 col-xs-3">
                                    <div class="rating text-right"> <i class="fa fa-star"></i>  <i class="fa fa-star"></i> <i class="fa fa-star"></i> <span class="rated">Rated @Model.Smartphones.Rows[i]["rating"].ToString()/3</span> </div>
                                </div>
                            </div>
                        </figcaption>
                        <div class="bottom-wrap-payment">
                            <figcaption class="info-wrap">
                                <div class="row">
                                    @if (discountPrice != 0)
                                    {
                                        <div class="col-md-9 col-xs-9"> <a href="#" class="title" data-abc="true"><s>$@Model.Smartphones.Rows[i]["price"]</s> $@discountPrice</a> <span class="rated">@Model.Smartphones.Rows[i]["payment_method"].ToString()</span> </div>
                                    }
                                    else
                                    {
                                        <div class="col-md-9 col-xs-9"> <a href="#" class="title" data-abc="true">$@Model.Smartphones.Rows[i]["price"]</a> <span class="rated">@Model.Smartphones.Rows[i]["payment_method"].ToString()</span> </div>
                                    }
                                </div>
                            </figcaption>
                        </div>
                        <div class="bottom-wrap">
                            <a class="btn btn-primary float-right" data-abc="true" href="@Url.Action("getProduct", "Cart", new { pid = Convert.ToInt32(@Model.Smartphones.Rows[i]["P_id"]) })"> <i class="fas fa-shopping-cart"></i> Add to Cart </a>
                        </div>
                    </figure>
                </div>
            </div>
            }
        </div>
    </div>
</section>
